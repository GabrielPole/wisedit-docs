---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="hero">
    <div class="hero-content">
      <h1>Wisedit Docs</h1>
      <p>Documentação oficial do Wisedit</p>
      <div class="buttons">
        <a href="/docs/intro" class="button primary">Começar</a>
        <a href="https://github.com/wisedit" class="button secondary">GitHub</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 24px;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 24px;
    background: linear-gradient(135deg, #58a6ff 0%, #1f6feb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    font-size: 1.5rem;
    color: #8b949e;
    margin-bottom: 48px;
  }

  .buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    padding: 12px 32px;
    border-radius: 6px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.2s;
    display: inline-block;
  }

  .button.primary {
    background-color: #238636;
    color: white;
  }

  .button.primary:hover {
    background-color: #2ea043;
    text-decoration: none;
    transform: translateY(-2px);
  }

  .button.secondary {
    background-color: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .button.secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    p {
      font-size: 1.2rem;
    }
  }
</style>
