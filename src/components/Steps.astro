---
// Componente de Steps customizado
---

<div class="steps">
  <slot />
</div>

<style>
  .steps {
    margin: 2rem 0;
    counter-reset: step-counter;
  }

  :global(.steps > ol) {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  :global(.steps > ol > li) {
    counter-increment: step-counter;
    position: relative;
    padding-left: 3rem;
    margin-bottom: 1.5rem;
    min-height: 2.5rem;
  }

  :global(.steps > ol > li::before) {
    content: counter(step-counter);
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    height: 2rem;
    background: var(--color-primary, #58a6ff);
    color: var(--color-bg, #0d1117);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9rem;
  }

  :global(.steps > ol > li::after) {
    content: '';
    position: absolute;
    left: 0.9rem;
    top: 2.5rem;
    bottom: -1.5rem;
    width: 2px;
    background: var(--color-border, #30363d);
  }

  :global(.steps > ol > li:last-child::after) {
    display: none;
  }
</style>
