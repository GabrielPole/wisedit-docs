---
// Componente de Callout customizado (substitui :::caution, :::note, etc)
interface Props {
  type?: 'note' | 'tip' | 'warning' | 'caution' | 'danger';
  title?: string;
}

const { type = 'note', title } = Astro.props;

const icons = {
  note: '‚ÑπÔ∏è',
  tip: 'üí°',
  warning: '‚ö†Ô∏è',
  caution: '‚ö†Ô∏è',
  danger: 'üö´',
};

const titles = {
  note: 'Nota',
  tip: 'Dica',
  warning: 'Aten√ß√£o',
  caution: 'Importante',
  danger: 'Perigo',
};
---

<div class={`callout callout-${type}`}>
  <div class="callout-title">
    <span class="callout-icon">{icons[type]}</span>
    <strong>{title || titles[type]}</strong>
  </div>
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
  }

  .callout-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .callout-icon {
    font-size: 1.2rem;
  }

  .callout-content {
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .callout-content :global(p:first-child) {
    margin-top: 0;
  }

  .callout-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .callout-note {
    border-left-color: #58a6ff;
  }

  .callout-tip {
    border-left-color: #3fb950;
  }

  .callout-warning,
  .callout-caution {
    border-left-color: #d29922;
  }

  .callout-danger {
    border-left-color: #f85149;
  }
</style>
